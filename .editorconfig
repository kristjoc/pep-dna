root = true

[*]
indent_style = spaces
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 80

# 4 space indentation for python files
[*.py]
indent_style = space
indent_size = 4

# Linux kernel coding style
[*.{c,h,cpp}]
indent_style = tab
indent_size = 8

# 2 space indentation for vimrc
[*.vimrc]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# 2 space indentation for markdown files
[*.md]
indent_style = space
indent_size = 2
